#!/bin/bash


case "$1" in
    --code)
        if [ $2 == '-f' ]; then
            filename=$3
            prompt=$4
        elif [ $3 == '-f' ]; then
            filename= $4
            prompt= $2
        else
            echo "Wrong format check usage -f [FILE_NAME]"
            break
        fi
        file="-f"
        prompt=\"${prompt}\"
        command="${file} ${filename} ${prompt}"

        python3 /home/shrey/Desktop/hackupto/CLI-Sage/code.py $command
        ;;
    --shell)
        python3 /home/shrey/Desktop/hackupto/CLI-Sage/command.py 
        ;;
    --debug)
        python3 /home/shrey/Desktop/hackupto/CLI-Sage/error.py
        ;;
    *)
        python3 /home/shrey/Desktop/hackupto/CLI-Sage/chat.py $1 
        ;;

    esac

